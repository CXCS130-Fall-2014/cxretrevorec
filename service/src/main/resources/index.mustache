<script type="text/javascript" src="/assets/jquery-1.9.1.min.js"></script>
<script type="text/javascript" charset="utf-8">

function recommendProduct(productId, productName) {
    //Hide the list of products and show the back button and reviews
    $("#get_results").hide(30);
    $("#result_button").show();
    $("#get_review_results").show(30);

    var get_url = "/services/product/v1/review/pid/" + productId + "?format=json";
        $.ajax({
            url: get_url,
            success:function(r) {
                var output = "The product " + productName + " has no reviews at the moment so no recommendation can be made.";
                if (r.reviewEntry[0] != null) {
                  var avgRating = 0;
                  output = "<table><tr><th>Title</th><th>Comment</th><th>Rating</th></tr>";
                  for(var i =0; i< r.reviewEntry.length; i++) { 
                    output += "<tr><td>" + r.reviewEntry[i].title + "</td>";
                    output += "<td>" + r.reviewEntry[i].comment + "</td>";
                    output += "<td>" + r.reviewEntry[i].rating + "</td>";
                    output += "</tr>";
                    avgRating += r.reviewEntry[i].rating;
                  }
                  output += "</table>";
                  avgRating = avgRating/r.reviewEntry.length;
                  avgRating = avgRating.toFixed(2);
                  if(avgRating >= 3.5) {
                    output = "The product " + productName + " has an average rating of " + avgRating + " so it is recommended.<hr>" + output;
                  } else {  
                    output = "The product " + productName + " has an average rating of " + avgRating + " so it is NOT recommended.<hr>" + output;
                  }
                } 
                $("#get_review_results").html(output);
            }
        });
}

//If the back button is clicked, show the list of products and hide reviews
$("#result_button").click(function() {
    $("#get_results").show(100);
    $("#get_review_results").hide(100);
    $("#result_button").hide();
});

//When the document is loaded, look at the product table and 
//fill the drop down list with the distinct categories
jQuery(document).ready(function() {
    $("#result_button").hide();

    var list = document.getElementById("categoryList");
    var optionHTML = "<option value='automotive'>Automotive</option>" +
                     "<option value='electronics'>Electronics</option>" +
                     "<option value='other'>Other</option>" +
                     "<option value='video games'>Video Games</option>";
    list.innerHTML = optionHTML;

    $("form[name='get_product']").submit(function(e) {
        e.preventDefault();
        $("#result_button").hide();
        var get_url = "";
        var productName = $("input[name='productName']", $(this)).val();
        var productList = document.getElementById("categoryList"); 
        var productCategory = productList.options[productList.selectedIndex].value;
        if(productName == "" || productName == null) {
            get_url = "/services/product/v1/product/productCategory/" + productCategory + "?format=json";
        } else {
            get_url = "/services/product/v1/product/productName/" + productName + "?format=json";
        }
        $.ajax({
            url: get_url,
            success:function(r) {
                var output = "There exists no product with this name/category.";
                if (r.productEntry[0] != null) {
                  output = "<ol>";
                  for(var i=0; i<r.productEntry.length; i++) {
                    output += '<li><a onClick="recommendProduct(' + r.productEntry[i].productId + ', \''+ r.productEntry[i].productName + '\');">' + r.productEntry[i].productName + "</a></li>"; 
                  }
                  output += "</ol>";
                }
                $("#get_results").html(output);
            }
        });
    });

});
</script>

